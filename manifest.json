{
  "manifest_version": 3,
  "name": "YouTube Subscriptions - Grid by Default",
  "version": "1.1.0",
  "description": "Force YouTube Subscriptions to use flow=1 grid view. Includes a network redirect and SPA-safe URL patching to avoid loops.",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules_1.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}